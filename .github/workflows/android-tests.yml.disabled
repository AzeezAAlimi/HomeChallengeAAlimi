name: Run Android Tests

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]

jobs:
  android-tests:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: "20"

      - name: Install dependencies
        run: npm ci

      - name: Run Android tests on emulator
        uses: reactivecircus/android-emulator-runner@v2
        with:
          api-level: 30
          target: default
          arch: x86_64
          emulator-options: -no-snapshot -no-audio -no-window -accel off
          disable-animations: true
          script: |
            echo "Waiting for emulator to boot..."
            boot_completed=""
            timeout=120
            while [ "$boot_completed" != "1" ] && [ $timeout -gt 0 ]; do
              boot_completed=$(adb -s emulator-5554 shell getprop sys.boot_completed 2>/dev/null | tr -d '\r')
              echo "Waiting... ($timeout seconds left)"
              sleep 5
              timeout=$((timeout - 5))
            done
            if [ "$boot_completed" != "1" ]; then
              echo "Emulator failed to boot"
              exit 1
            fi

            echo "Installing and starting Appium"
            npm install -g appium
            appium --base-path /wd/hub --log-level error &
            sleep 15

            echo "Running tests"
            npx wdio run src/mobileAppTestAutomation/appium/config/wdio.android.conf.js

      - name: Generate Allure Report
        run: |
          npx allure generate allure-results --clean -o allure-report

      - name: Upload Allure Report
        uses: actions/upload-artifact@v4
        with:
          name: allure-report
          path: allure-report
